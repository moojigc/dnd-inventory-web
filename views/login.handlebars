{{> navbar}}
<main class="container-lg wrapper">
    <header>
        <h1>Login</h1>
    </header>
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <form action="/api/login" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control username" name="username" placeholder="Enter username">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control password" name="password" placeholder="Enter password">
                </div>
                {{#if error}}
                <div class="row alert alert-warning">{{error}}</div>
                {{/if}}
                {{#if errorMsg}}
                <div class="row alert alert-warning">{{errorMsg}}</div>
                {{/if}}
                {{#if successMsg}}
                <div class="row alert alert-success">{{successMsg}}</div>
                {{/if}}
                <button type="submit" class="btn btn-primary login-btn">Login</button>
            </form>
        </div>
    </div>
    <a href="/register">Click here to register.</a>
</main>